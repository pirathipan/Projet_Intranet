{% extends 'base.html.twig' %}
{% block body %}
    <h1>Notes list</h1>
    <table>
        <thead>
            <tr>
                <th>Matiere</th>
                <th>Note</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.matiere}}</td>
                <td>{{ note.score }}</td>
                <td>{{ note.comment }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER_ADMIN") %}
    <ul>
        <li>
            <a href="{{ path('matiere_new') }}">Create a new matiere</a>
        </li>
    </ul>

    {% endif %}
{% endblock %}
